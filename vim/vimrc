call pathogen#infect()

syntax on
filetype plugin indent on  " Automatically detect file types.

" Gui Configuration
if has("gui_running")
  set number
  set guifont=Menlo:h12
  set background=dark
  colorscheme lucius
  set guioptions=egmrLt
else
  colorscheme ron
end

runtime macros/matchit.vim

let mapleader = ";"
let maplocalleader = ";"
set autoindent
set autowrite  " Writes on make/shell commands
set backspace=start,indent
set clipboard=unnamed
set expandtab
set formatoptions=tcqr
set hidden
set history=256  " Number of things to remember in history.
set listchars=tab:▸\ ,trail:¬   " UTF-8 characters for trailing whitespace
set hlsearch
set ignorecase
set laststatus=2  " Always show status line.
set modifiable
set nocompatible  " We don't want vi compatibility.
set nocp incsearch
set noerrorbells  " No noise.
set novisualbell  " No blinking .
set ruler  " Ruler on
set scrolloff=3
set smartcase
set smarttab
set statusline+=\ %t\ \|\ len:\ \%L\ \|\ type:\ %Y\ \|\ ascii:\ \%03.3b\ \|\ hex:\ %2.2B\ \|\ line:\ \%2l\ \|\ %m
set timeoutlen=200  " Time to wait after ESC (default causes an annoying delay)
set wildmode=longest,list
set tabstop=2
set shiftwidth=2
set softtabstop=2
set wildignore+=*.o,*.obj,.git,*.pdf,*.gif,*.png,*.jpg,*.ico

" Shortcuts
map <Leader>s :w<CR>
cab Q quit
cab W write
cab Wq wq
nmap <expr> <Leader>e ':e ' . expand('%:p:h')
map <Leader><Space> :call ClearEOLSpaces()<CR>
map <Leader><Tab> :call FixTabs()<CR>

" Syntastic
let g:ruby_path = "/Users/rdeshpande/.rvm/rubies/default/bin"

nnoremap <Leader>f     :CtrlPMRUFiles<CR>

" Vim-pasta
let g:pasta_enabled_filetypes = ['ruby', 'javascript', 'css', 'sh']

" Consider question/exclamation marks to be part of a Vim word.
autocmd FileType ruby set iskeyword=@,48-57,_,?,!,192-255
autocmd FileType scss set iskeyword=@,48-57,_,-,?,!,192-255

let g:ragtag_global_maps = 1 
let g:Powerline_symbols = 'fancy'

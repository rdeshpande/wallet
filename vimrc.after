" Gui Configuration
set wrap
set hidden

if has("gui_running")
  colorscheme ir_dark
  set number
  set guifont=Consolas:h15
  set guioptions=egmrLt
end

let g:AutoClosePairs = {'(': ')', '{': '}', '[': ']', '"': '"', "'": "'", '#{': '}', '|':'|' } 
let g:AutoCloseProtectedRegions = ["Character"]

autocmd BufEnter *.html.slim :set ft=slim
